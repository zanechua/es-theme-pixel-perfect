<!--
  Theme: Elementerial
  Author: mluizvitor
-->

<theme>
  <formatVersion>7</formatVersion>

  <!-- View que exibe a borda de overlay em múltiplos modos de exibição -->
  <view name="system, basic, detailed, grid, video">
    <image name="borderOverlay" extra="true">
      <path>./assets/ratio43/borders.png</path>
    </image>
  </view>

  <!-- View que exibe o fundo padrão para gamelist nos modos básico, detalhado, grid e vídeo -->
  <view name="basic, detailed, grid, video">
    <image name="custom_bg_fg" extra="true">
      <path>./assets/ratio43/gamelist-basic.png</path>
      <size>1 1</size>
      <origin>0 0</origin>
      <pos>0 0</pos>
      <zIndex>4</zIndex>
    </image>
  </view>

  <!-- View que configura o espaçamento das linhas da lista de jogos nos modos básico e detalhado -->
  <view name="basic, detailed">
    <textlist name="gamelist">
      <lineSpacing>1.5</lineSpacing>
      <lineSpacing ifHelpPrompts="true">1.68</lineSpacing>
    </textlist>
  </view>

  <!-- View que configura o espaçamento das linhas da lista de jogos no modo vídeo -->
  <view name="video">
    <textlist name="gamelist">
      <lineSpacing>1.62</lineSpacing>
      <lineSpacing ifHelpPrompts="true">1.42125</lineSpacing>
    </textlist>
  </view>

  <!-- View que exibe o rating (avaliação) na tela detalhada -->
  <view name="detailed">
    <rating name="md_rating">
      <pos>0.6075 0.83125</pos>
      <size>0.066667</size>
    </rating>
  </view>

  <!-- View que exibe o fundo específico para o modo vídeo -->
  <view name="video">
    <image name="custom_bg_fg" extra="true">
      <path>./assets/ratio43/gamelist-video.png</path>
      <size>1 1</size>
      <origin>0 0</origin>
      <pos>0 0</pos>
      <zIndex>4</zIndex>
    </image>
  </view>

  <!-- View que configura o grid de jogos, incluindo layout, margens e aparência dos tiles -->
  <view name="grid">
    <imagegrid name="gamegrid">
      <autoLayout>3 2</autoLayout>
      <margin>0.033333 0.025</margin>
    </imagegrid>

    <gridtile name="default">
      <padding>4 4</padding>
    </gridtile>

    <image name="gridtile.image">
      <roundCorners>0.04</roundCorners>
    </image>

    <image name="gridtile.image:selected">
      <roundCorners>0.025</roundCorners>
    </image>

    <ninepatch name="gridtile.background">
      <path>./assets/grid-selector@2.png</path>
      <cornerSize>6 6</cornerSize>
    </ninepatch>

    <text name="gridtile">
      <size>0.9 0.225</size>
      <padding>0.05 0</padding>
      <lineSpacing>1.15</lineSpacing>
    </text>
  </view>

  <!-- View do menu de configurações, exibindo o fundo do menu -->
  <view name="menu">
    <menuBackground name="menubg">
      <path>./assets/ratio43/menu.png</path>
    </menuBackground>
  </view>

  <!-- View do sistema, exibindo carrossel, fundo e informações do sistema -->
  <view name="system">
    <carousel name="systemcarousel">
      <size>1.1 1</size>
      <maxLogoCount>6</maxLogoCount>
      <logoPos>0.15 0.6</logoPos>
    </carousel>

    <text name="systemName" extra="true">
      <pos>0.08333 0.375</pos>
    </text>

    <text name="systemInfo">
      <pos>0.08333 0.46</pos>
    </text>
  </view>

  <!-- View que exibe o fundo do OSD nos modos sistema, básico, detalhado, grid e vídeo -->
  <view name="system, basic, detailed, grid, video">
    <image name="osdBackground" extra="true">
      <path>./assets/ratio43/osd-bg.png</path>
    </image>
  </view>

  <!-- CustomView "boxes" para grid com layout 2x2 e cantos arredondados menores -->
  <customView name="boxes" inherits="grid">
    <imagegrid name="gamegrid">
      <autoLayout>2 2</autoLayout>
      <margin>0.025 0.033333</margin>
    </imagegrid>

    <image name="gridtile.image">
      <roundCorners>0.025</roundCorners>
    </image>

    <image name="gridtile.image:selected">
      <roundCorners>0.01</roundCorners>
    </image>
  </customView>

  <!-- CustomView "elementflix" para grid horizontal com layout 3x1 e fundo de vídeo -->
  <customView name="elementflix" inherits="grid">
    <imagegrid name="gamegrid">
      <autoLayout>3 1</autoLayout>
    </imagegrid>

    <ninepatch name="gridtile.background">
      <path>./assets/grid-selector@2.svg</path>
      <cornerSize>6 6</cornerSize>
    </ninepatch>

    <gridtile name="default">
      <padding>3 3</padding>
    </gridtile>

    <image name="custom_bg_fg" extra="true">
      <path>./assets/ratio43/gamelist-video.png</path>
      <size>1 1</size>
      <origin>0 0</origin>
      <pos>0 0</pos>
      <zIndex>4</zIndex>
    </image>
  </customView>

  <!-- View da tela principal, exibe relógio e indicador de bateria/rede -->
  <view name="screen">
    <text name="clock">
      <pos>0.09 0.041666667</pos>
      <size>0.7625 0</size>
    </text>


    <batteryIndicator name="batteryIndicator">
      <pos>0.88 0.008333333</pos> 
      <size>0.066666667</size>
      <itemSpacing>0.0125</itemSpacing>
      
      <!-- Assets -->
      <full>./assets/icons/screen/24x24/battery=full.svg</full>
      <at75>./assets/icons/screen/24x24/battery=75.svg</at75>
      <at50>./assets/icons/screen/24x24/battery=50.svg</at50>
      <at25>./assets/icons/screen/24x24/battery=25.svg</at25>
      <empty>./assets/icons/screen/24x24/battery=empty.svg</empty>
      <incharge>./assets/icons/screen/24x24/battery=charging.svg</incharge>
      <networkIcon>./assets/icons/screen/24x24/wifi=on.svg</networkIcon>
    </batteryIndicator>
  </view>
</theme>