<!--
  Theme: Elementerial
  Author: mluizvitor
-->

<theme>
  <formatVersion>7</formatVersion>

  <!-- View que exibe a imagem de fundo do sistema nas telas de lista, detalhes, grid e vídeo, podendo usar imagens customizadas ou desfocadas -->
  <view name="basic, detailed, grid, video">
    <image name="cover_list" extra="true">
      <path>{random:image}</path>
      <path>./assets/systems/${system.theme}.webp</path>

      <!-- Carrega versão normal -->
      <path>./customBackground/general.jpg</path>
      <path>./customBackground/general.jpeg</path>
      <path>./customBackground/general.png</path>
      <path>./customBackground/general.webp</path>

      <path>./customBackground/${system.theme}.jpg</path>
      <path>./customBackground/${system.theme}.jpeg</path>
      <path>./customBackground/${system.theme}.png</path>
      <path>./customBackground/${system.theme}.webp</path>

      <!-- Carrega versão desfocada -->
      <path>./customBackground/blurred/general.blurred.jpg</path>
      <path>./customBackground/blurred/general.blurred.jpeg</path>
      <path>./customBackground/blurred/general.blurred.png</path>
      <path>./customBackground/blurred/general.blurred.webp</path>

      <path>./customBackground/blurred/${system.theme}.blurred.jpg</path>
      <path>./customBackground/blurred/${system.theme}.blurred.jpeg</path>
      <path>./customBackground/blurred/${system.theme}.blurred.png</path>
      <path>./customBackground/blurred/${system.theme}.blurred.webp</path>
    </image>
  </view>

  <!-- CustomView "elementflix" que exibe a imagem de fundo do sistema na grid personalizada, podendo usar imagens customizadas ou desfocadas -->
  <customView name="elementflix" inherits="grid">
    <image name="cover_list" extra="true">
      <path>{random:image}</path>
      <path>./assets/systems/${system.theme}.webp</path>

      <!-- Carrega versão normal -->
      <path>./customBackground/general.jpg</path>
      <path>./customBackground/general.jpeg</path>
      <path>./customBackground/general.png</path>
      <path>./customBackground/general.webp</path>

      <path>./customBackground/${system.theme}.jpg</path>
      <path>./customBackground/${system.theme}.jpeg</path>
      <path>./customBackground/${system.theme}.png</path>
      <path>./customBackground/${system.theme}.webp</path>

      <!-- Carrega versão desfocada -->
      <path>./customBackground/blurred/general.blurred.jpg</path>
      <path>./customBackground/blurred/general.blurred.jpeg</path>
      <path>./customBackground/blurred/general.blurred.png</path>
      <path>./customBackground/blurred/general.blurred.webp</path>

      <path>./customBackground/blurred/${system.theme}.blurred.jpg</path>
      <path>./customBackground/blurred/${system.theme}.blurred.jpeg</path>
      <path>./customBackground/blurred/${system.theme}.blurred.png</path>
      <path>./customBackground/blurred/${system.theme}.blurred.webp</path>
    </image>
  </customView>
</theme>