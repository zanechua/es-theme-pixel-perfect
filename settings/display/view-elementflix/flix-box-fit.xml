<theme>
  <formatVersion>7</formatVersion>

  <!-- CustomView "elementflix" que exibe as imagens das caixas dos jogos ajustadas proporcionalmente ao tile -->
  <customView name="elementflix" inherits="grid">
    <gridtile name="default, selected">
      <selectionMode>image</selectionMode>
      <imageSizeMode>maxSize</imageSizeMode>
    </gridtile>
  </customView>
</theme>