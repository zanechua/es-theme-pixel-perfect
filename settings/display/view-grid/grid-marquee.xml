<theme>
  <formatVersion>7</formatVersion>

  <!-- View que configura a grid para exibir imagens do tipo letreiro dos jogos -->
  <view name="grid">
    <imagegrid name="gamegrid">
      <imageSource>marquee</imageSource>
    </imagegrid>

    <gridtile name="default, selected">
      <selectionMode>full</selectionMode>
      <imageSizeMode>maxSize</imageSizeMode>
    </gridtile>
  </view>
</theme>