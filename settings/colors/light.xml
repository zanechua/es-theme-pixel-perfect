<theme>
  <formatVersion>7</formatVersion>

  <view name="system">
    <image name="cover_general" extra="true">
      <path>./assets/background/default-light.png</path>
      <size>1 0</size>
      <origin>0 0</origin>
      <pos>0 0.</pos>
      <zIndex>-9</zIndex>
    </image>
  </view>

  <view name="splash">
    <image name="background_extra" extra="true">
        <origin>0 0</origin>
        <pos>0 0</pos>
        <size>1 1</size>
        <zIndex>0</zIndex>
        <visible>true</visible>
        <path>./assets/splash/default-light.png</path>
    </image>
  </view>

  <view name="menu">
    <menuTextEdit name="menutextedit">
      <inactive>./assets/input_inactive.svg</inactive>
      <active>./assets/input_active-light.svg</active>
    </menuTextEdit>
  </view>

  <view name="grid">
    <gridtile name="selected">
      <backgroundColor>${mainColor}</backgroundColor>
    </gridtile>

    <imagegrid name="gamegrid">
      <gameImage>./assets/icons/cartridge-light.png</gameImage>
      <folderImage>./assets/icons/folder-light.png</folderImage>
    </imagegrid>

  </view>
</theme>